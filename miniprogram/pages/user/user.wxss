page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: url('https://zwp1.top/images/user-bg1.png') top no-repeat;
  background-size: contain;
}
page .wallet,
page .server,
page .order {
  width: 95vw;
  border-radius: 10rpx;
  margin-top: 10rpx;
  background-color: white;
}
page .wallet .tittle,
page .server .tittle,
page .order .tittle {
  font-weight: bold;
  display: flex;
  height: 60rpx;
  align-items: center;
}
page .wallet .tittle .more,
page .server .tittle .more,
page .order .tittle .more {
  font-weight: normal;
  position: relative;
  left: 55%;
  display: flex;
}
page .wallet .tittle .more iconfont,
page .server .tittle .more iconfont,
page .order .tittle .more iconfont {
  display: flex;
  align-items: center;
}
page .wallet .btn-box,
page .server .btn-box,
page .order .btn-box {
  display: flex;
  flex-wrap: wrap;
}
page .wallet .btn-box > .btn,
page .server .btn-box > .btn,
page .order .btn-box > .btn {
  flex: 0 0 25%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}
page .wallet .btn-box > .btn view,
page .server .btn-box > .btn view,
page .order .btn-box > .btn view {
  margin: 10rpx 0;
}
.user .user-info {
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.user .user-info .avatar {
  margin: 10rpx;
}
.user .user-info > view {
  margin: 0 50rpx;
}
.user .user-info .bind-phone {
  padding: 5rpx 25rpx;
  border-radius: 30rpx;
  background-color: brown;
  color: white;
  text-align: center;
}
.user .user-info .setting {
  position: relative;
  bottom: 50rpx;
  left: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user .wallet .btn-box {
  justify-content: space-between;
}
.server .feedBack {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.server .feedBack .block {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 400rpx;
  height: 300rpx;
  border-radius: 20rpx;
  background-color: white;
}
.server .feedBack .block text {
  margin: 20rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.login {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
