.title {
	height: 100rpx;line-height: 100rpx; text-align: center;font-size: 36rpx; font-weight: 800; 
	 margin: 0 auto; 
}

.pro{
	background-color: #fff; margin: 4rpx 0; display: flex; justify-content: flex-start;
	padding: 8rpx;
}
.pro image{
	width: 12rem; border-radius: 3%;
}
.pro .info{
	width: 70vw; font-size: 28rpx; padding-left: 20rpx;
}
.pro .info view{
	line-height: 48rpx;
}
.pro .info .name{
	font-size: 30rpx;font-weight: 600;
}
.pro .info .one view text{
	font-weight: 600;
}
.pro .info .two{
	display: flex; justify-content: space-between; margin: 10rpx 0;
}
.pro .info .two button{
	font-size: 26rpx;
}
.pro .info .two button:first-child{
	background-color: #00c17b; border-radius: 0; color: #fff; height: 50rpx; line-height: 50rpx;
}
.pro .info .two button:last-child{
	border-radius: 0; color: #00c17b; height: 50rpx; line-height: 50rpx; border: 1rpx #00c17b solid;
}