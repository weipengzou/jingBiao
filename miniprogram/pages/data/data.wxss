.login {
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
  }
  
.box{
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	margin: 0 auto;
	background-color: #ffffff;
	height: 100vh;
	align-items: center;
	border-radius: 20rpx;
}
.info{
	display: flex;
	flex-direction: column;
	text-align: center;
}
.info .img{
	height: 300rpx;
	text-align: center;
}
.info .img image{
	width: 300rpx;
	height: 300rpx;
}
.info view{
	height: 80rpx;
	line-height: 80rpx;
}
.aui-flex{
	display: flex;
	flex-direction: row;
}
.aui-flex view{
	padding: 0 20rpx;
}
.aui-choice-text {
    padding: 0.8rem 3rem;
}

.aui-choice-text .aui-sta {
    color: #000000;
    font-size: 1.1rem;
}

.aui-choice-text .aui-cm {
    color: #b4b4b4;
    font-size: 1.1rem;
}
.aui-show-case {
    background: #3d4b5a;
    color: white;
    border-radius: 100rpx;
    height: 3rem;
    line-height: 3rem;
    text-align: center;
    font-size: 2rem;
	padding: 0 2rem;
    font-weight: normal;
    -webkit-font-smoothing: inherit;
    outline: none;
}